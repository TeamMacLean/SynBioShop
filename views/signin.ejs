<div class="container">
    <div class="narrow-center">
        <div class="login-box">
            <div class="login-header">
                <!--<img src="/img/logo.png">-->
                <a href="/">SynBio</a>
            </div>
            <div class="login-body">
                <p class="center">Sign in to continue</p>

                <% if(typeof devMode !== 'undefined' && devMode) { %>
                <div style="background: #fff3cd; color: #856404; padding: 10px; border-radius: 4px; margin-bottom: 20px; border: 1px solid #ffeeba;">
                    <strong>ðŸ”§ DEV MODE ACTIVE</strong><br>
                    <small>Login with username: <code>deeks</code> and any non-empty password<br>
                    LDAP authentication is bypassed</small>
                </div>
                <% } %>

                <form method="post" action="/signin">
                <label for="username"><% if(typeof devMode !== 'undefined' && devMode) { %>Dev Username<% } else { %>NBI Username (not full email address!)<% } %></label>
                    <div class="form-group has-feedback">

                        <input class="wide has-icon" type="text" id="username" name="username" placeholder="Username"
                               required
                               autofocus>
                        <span class="icon_profile input-icon"></span>
                    </div>
                    <label for="password">Password</label>
                    <div class="form-group has-feedback">

                        <input class="wide has-icon" type="password" id="password" name="password"
                               placeholder="Password" required>
                        <span class="icon_lock input-icon"></span>
                    </div>
                    <button class="wide primary" type="submit">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

