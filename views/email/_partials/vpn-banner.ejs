<% if ((locals._vpnMode || locals._devMode) && locals._intendedRecipients) { %>
<tr>
    <td style="background-color: <%= locals._devMode ? '#d1ecf1' : '#fff3cd' %>; border: 2px solid <%= locals._devMode ? '#bee5eb' : '#ffc107' %>; padding: 15px 20px; margin: 10px;">
        <table width="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td style="font-family: Arial, sans-serif; font-size: 14px; color: <%= locals._devMode ? '#0c5460' : '#856404' %>;">
                    <strong style="font-size: 16px;"><%= locals._devMode ? 'ðŸ”§ DEV MODE' : 'âš ï¸ VPN TEST MODE' %></strong>
                    <p style="margin: 10px 0 5px 0;">
