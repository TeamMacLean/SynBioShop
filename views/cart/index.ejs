<% include ../head.ejs %>

<div class="container">
    <h2 class="center">Shopping Basket</h2>
    <% if(typeof cart != 'undefined'){ %>
    <% if(cart.items.length > 0){ %>

    <table class="cart">
        <thead>
        <tr>
            <th>Item</th>
            <th class="center">Large Scale</th>
            <th class="center">Action</th>
        </tr>

        </thead>
        <tbody>
        <% cart.items.map(function(item){ %>
        <tr>
            <td><a href="#"><%- item.type.name %></a></td>
            <td class="center">
                <input name="large-scale" type="checkbox">
            </td>
            <td class="center"><a href="/cart/remove/<%- item.id %>"
                                  class="button danger outline icon remove-from-cart"><span
                            data-icon="&#xe019;"></span></a>
            </td>
        </tr>
        <% }); %>
        </tbody>
    </table>
    <div class="pull-right">
        <a href="#" class="button primary">Update Cart</a>
        <a href="/placeorder" class="button success">Place Order</a>
    </div>
    <% } else { %>
    <h3 class="center">Your Shopping Basket is empty.</h3>
    <% } %>
    <% } else { %>
    <h3 class="center">Your Shopping Basket is empty.</h3>
    <% } %>

</div>

<% include ../foot.ejs %>